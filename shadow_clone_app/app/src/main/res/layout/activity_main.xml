<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
   android:gravity="center_horizontal">


    <EditText
        android:id="@+id/client_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Client Name"
        android:padding="20dp"
        android:layout_marginTop="100dp"
        android:gravity="center"/>

    <Button
        android:id="@+id/connect_to_server_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect to server"
        android:padding="20dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:onClick="onClickConnect"/>

    <TextView
        android:id="@+id/offer_sdp_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="OfferSDP received:"
        android:textAlignment="viewStart"
        android:textSize="20sp"
        android:layout_marginStart="10dp"
        />

    <TextView
        android:id="@+id/offer_sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginEnd="10dp"
        android:text="ajhfkdfhkdsfjhdskfjhdskfsaishkjfdshksfhdsfkjhdfdksjhdskfdskfdskfjhdsfkdsfjhdsfkdsfskdfhsdkfjdshfksfdhfsldkfhdsfksdhsfsfjhdsfhlkds.fhjsdfhsdkfhdsfjdskfjhdsdksjfhdskf"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/answer_sdp_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Answer SDP sent:"
        android:textAlignment="viewStart"
        android:layout_marginStart="10sp"
        android:textSize="20sp"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/answer_sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginEnd="10dp"
        android:text="Default Answer SDP"
        android:textAlignment="center"
        />



</androidx.appcompat.widget.LinearLayoutCompat>